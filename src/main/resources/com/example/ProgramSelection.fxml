<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="314.0" prefWidth="378.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.example.ProgramSelectionController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Label text="Laptop Recommendation App">
            <font>
                <Font name="System Bold" size="24" />
            </font>
        </Label>
      <ImageView fitHeight="171.0" fitWidth="212.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="https://helios-i.mashable.com/imagery/articles/01maSdptSu8RcI0i0dMQgF3/hero-image.fill.size_1248x702.v1668610683.png" />
         </image>
      </ImageView>
        <ComboBox fx:id="programBox" promptText="Select a program">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Computer Programming" />
                    <String fx:value="Graphic Design" />
                    <String fx:value="Data Science" />
                    <String fx:value="Gaming" />
                    <String fx:value="Web Development" />
                    <String fx:value="Artificial Intelligence" />
                </FXCollections>
            </items>
        </ComboBox>
        <Button onAction="#getRecommendations" text="Get Recommendations" />
    </children>
</VBox>
